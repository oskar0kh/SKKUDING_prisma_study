generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  name  String  @unique // 타입명 : 대문자로 시작
  address String
  phone String
  rating  Float?
  createdAt DateTime  @default(now()) // 이 model(테이블)이 처음 생성된 시각 저장
  updatedAt DateTime  @updatedAt      // 이 model이 업데이트되는 시각 저장
}